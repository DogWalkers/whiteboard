<!DOCTYPE html>
<html>
<head>
	<title>Add Skills</title>
	<meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" href="ico/favicon.png">

    <link href="css/hover_pack.css" rel="stylesheet">

    <!-- Bootstrap core CSS -->
    <link href="css/bootstrap.css" rel="stylesheet">
    <link href="css/style.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="css/main.css" rel="stylesheet">
    <link href="css/colors/color-74c9be.css" rel="stylesheet">    
    <link href="css/animations.css" rel="stylesheet">
    <link href="css/font-awesome.min.css" rel="stylesheet">

</head>
<body>
	<% include navbar %>

    <div class="container">
        <div class="col-sm-8 col-sm-offset-2">
        <div class="page-header"><h1>Post a New Project</h1></div>
            <form action="/ask" method="post">
                <div class="form-group category">
                    <label>Choose Category</label>
                    <select class="form-control" name="category">  
                        <% cats.forEach(function(entry){ %>
                        <option> <%= entry %> </option>
                        <%  });%>
                    </select>
                </div>
                <div class="form-group question" style="display: none">
                    <label>Question</label>
                    <input type="text" class="form-control" name="question" maxlength="120"></input>
                </div>
                <div class="form-group description" style="display: none">
                    <label>Additional Details</label>
                    <textarea rows="3" class="form-control" name="text" style="resize:vertical;min-height:2em" maxlength="400"></textarea>
                </div>

                <button type="submit" class="btn btn-warning btn-lg submit" style="display: none">Submit</button>
            </form>
        </div>


    </div>




    <script src="js/bootstrap.min.js"></script>
    <script src="js/retina.js"></script>
    <script>
        $(document).ready(function(){
            $("select").prop("selectedIndex", -1);
            $("select").change(function(){
                $(".question").show("fast", function(){
                    $(".description").show("fast", function(){
                        $(".submit").show("fast");
                    });
                });
            }); 

        });

    </script>
</body>